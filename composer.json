{
	"name": "orbis",
	"description": "The default WordPress theme for Orbis.",
	"version": "3.0.0",
	"keywords": [
		"orbis",
		"wordpress",
		"theme",
		"bootstrap"
	],
	"homepage": "http://www.pronamic.eu/themes/orbis/",
	"authors": [
		{
			"name": "Remco Tolsma",
			"email": "info@remcotolsma.nl",
			"homepage": "http://www.remcotolsma.nl",
			"role": "Developer"
        },
		{
			"name": "Karel-Jan Tolsma",
			"email": "info@kareljantolsma.nl",
			"homepage": "http://www.kareljantolsma.nl",
			"role": "Developer"
        }
    ],
    "support": {
        "email": "support@pronamic.nl",
        "issues": "https://github.com/pronamic/wt-orbis2/issues",
        "source": "https://github.com/pronamic/wt-orbis2"
    },
	"type": "wordpress-theme",
	"autoload": {
		"classmap": ["classes/"]
	},
    "require": {
    	"php": ">=5.2.0",
		"abraham/twitteroauth": "^0.6.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.7",
        "wp-coding-standards/wpcs": "0.10.0",
        "phpmd/phpmd": "^2.4"
    },
    "scripts": {
        "post-autoload-dump": [
            "if [[ -d vendor/wp-coding-standards/wpcs ]]; then vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs; fi"
        ]
    }
}
